server {
    listen $PORT;  # Use the port assigned by Heroku

    server_name localhost;

    root /app/public;  # Adjust this to your static files' location

    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    error_page 404 /index.html;

    error_log /tmp/error.log;  # Optional: Log errors to a temporary file
    access_log /tmp/access.log; # Optional: Log access requests to a temporary file
}
